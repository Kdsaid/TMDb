<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="Text.Sub">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="Text.Title1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="Text.Title2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="Text.Title3">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="ImageButton">
        <item name="android:padding">@dimen/_1sdp</item>
    </style>

    <style name="ImageButton.OnBackdrop">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="tint">@color/onBackdrop</item>
    </style>

</resources>